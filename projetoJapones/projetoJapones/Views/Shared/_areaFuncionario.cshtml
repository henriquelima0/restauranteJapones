@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Restaurante Japonês">
    <title>Shingueru</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="~/assets/css/areaFun.css">
</head>

<body>
    <header class="cabecalho" style="font-weight: 900;">
        <nav>
            <h2 class="logo">Área<span> Restrita</span></h2>
            <ul>

                <li>
                    <div class="dropdown">
                        <button class="dropbtn">Cadastro</button>
                        <div class="dropdown-content">
                            <a href="~/Produto/Index">Produto</a>
                            <a href="~/Categoria/Index">Categoria</a>
                            <a href="~/Pagamento/Index">Forma de Pagamento</a>
                            <a href="~/Funcionario/Index">Funcionário</a>
                        </div>
                    </div>
                </li>

                <li>
                    <div class="dropdown">
                        <button class="dropbtn">Consulta</button>
                        <div class="dropdown-content">
                            <a href="~/Produto/ConsProduto">Produto</a>
                            <a href="~/Categoria/ConsCategoria">Categoria</a>
                            <a href="~/Pagamento/ConsPagamento">Forma de Pagamento</a>
                            <a href="~/Cliente/ConsCliente">Cliente</a>
                            <a href="~/Funcionario/ConsFuncionario">Funcionário</a>
                        </div>
                    </div>
                </li>

                <li>
                    <div class="dropdown">
                        <button class="dropbtn">Pedido</button>
                        <div class="dropdown-content">
                            <a href="~/Entrega/Index">Entregas</a>
                        </div>
                    </div>
                </li>

            </ul>
            @if (Session["usu"] != null)
            {
                <a class="btn-login" href="/Home/Perfil/">Olá @ViewBag.usu</a>}
            else
            {
                <a class="btn-login" href="/Login/Index/">Funcionário</a>
            }
        </nav>
    </header>

    <div class="container body-content ">
        @RenderBody()
    </div>

    
</body>

</html>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)