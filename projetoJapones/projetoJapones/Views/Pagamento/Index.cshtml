@model projetoJapones.Models.modelPagamento

@{  Layout = "~/Views/Shared/_areaFuncionario.cshtml"; }
<head>
    <title>Cad Pagamento</title>
</head>

<style>
    body {
        color: white;
    }

    .form-group {
        width: 60%;
    }
</style>

<h2>Pagamento</h2>

@using (Html.BeginForm("Index", "Pagamento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()

  <div style="color: white;" class="form-horizontal">
      <h4 style="font-weight: 900;">Cadastro de Forma de Pagamento</h4>
      <hr />


      <div class="form-group space-around-flex">
          <div class="">
              @Html.LabelFor(model => model.ds_Pagto, htmlAttributes: new { @class = "control-label col-md-2" })
          </div>
          <div class="col-md-10">
              @Html.EditorFor(model => model.ds_Pagto, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
              @Html.ValidationMessageFor(model => model.ds_Pagto, "", new { @class = "text-danger" })
          </div>
          @ViewBag.msgCad
      </div>

      <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
              <input type="submit" value="Salvar Produto" class="btn-grad" />
          </div>
      </div>
  </div>
}



