@model projetoJapones.Models.modelCategoria

@{     Layout = "~/Views/Shared/_areaFuncionario.cshtml";}
<head>
    <title>Cad Categoria</title>
</head>

<style>
    body {
        color: white;
    }
    .form-group {
        width: 50%;
    }
</style>

<h2>Categoria</h2>

@using (Html.BeginForm("Index", "Categoria", FormMethod.Post, new { enctype = "multipart/form-data"  }))
{
@Html.ValidationSummary()

<div style="color: white;" class="form-horizontal">
    <h4 style="font-weight: 900;">Cadastrar Nova Categoria</h4>
    <hr />

    <div class="form-group space-around-flex" autocomplete="off">
        <div class="">
            @Html.LabelFor(model => model.nm_Cat, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nm_Cat, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.nm_Cat, "", new { @class = "text-danger" })
        </div>
        @ViewBag.msgCad
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salvar Produto" class="btn-grad" />
        </div>
    </div>
</div>
                    }

                    

