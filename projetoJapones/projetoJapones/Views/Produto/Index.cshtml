@model projetoJapones.Models.modelProduto

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_areaFuncionario.cshtml";
}
<body>
    <h2 style="font-weight: 900;">Produtos</h2>
    <style>
        body {
            color: white;
        }
    </style>
    @using (Html.BeginForm("Index", "Produto", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Cadastro de Produtos</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.nm_Produto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nm_Produto, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.nm_Produto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.vl_Produto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.vl_Produto, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.vl_Produto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group space-around-flex">
        <div class="">
            @Html.LabelFor(model => model.desc_Produto, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.desc_Produto, new { @class = "form-control", @autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.desc_Produto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.qt_Estoque, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.qt_Estoque, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.qt_Estoque, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group center">
        <div>
            @Html.LabelFor(model => model.cd_Cat, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>

        <div style="color: black;" class="col-md-10">
            @Html.DropDownList("categoria", "Escolha a Categoria")
        </div>
    </div>

    <div class="editor-field">
    </div>

    <div class="form-group center">
        <div>
            <label class="control-label col-md-2" for="file">Foto</label>
        </div>
        <div class="col-md-10">
            <input type="file" name="file" id="file" /> <br />
        </div>
    </div>

    <div class="form-group center">
        <div class="col-md-10">
            @ViewBag.msg <br />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cadastrar Produto" class="btn-grad" />
        </div>
    </div>
</div>
    }
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
