@model projetoJapones.Models.modelFuncionario

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Funcionário</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="~/assets/css/cadFun.css" media="screen" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <section class="vh-100">
            <div class="centralizar">
                <center></center>
                <h1 style="text-align:center"><span>Área Restrita</span></h1>
                <div class="container-fluid h-custom">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-md-9 col-lg-6 col-xl-5">
                            <img src="~/assets/img/sushiman.png" class="imgLogin" alt="Sample image">
                        </div>
                        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                            <form>
                                <div class="form-horizontal">
                                    <h2 style="font-weight: 900;"><span>Login Funcionário</span></h2>

                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.login_Funcio, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.login_Funcio, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.login_Funcio, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.senha_Funcio, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.senha_Funcio, new { htmlAttributes = new { @class = "form-control", @type = "password", @autocomplete = "off" } })
                                            @Html.ValidationMessageFor(model => model.senha_Funcio, "", new { @class = "text-danger"  })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10 ">
                                            <input type="submit" value="Fazer Login" class="btn-grad" />
                                        </div>
                                    </div>

                                    <p class="small fw-bold mt-2 pt-1 mb-0">
                                        Cliente? <a href="/Cliente/Index/" class="link-danger"><span>Área Cliente</span></a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>
</html>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
